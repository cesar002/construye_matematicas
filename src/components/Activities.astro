---
interface Props {
  title: string;
  href: string;
  img: string;
}

const { href, title, img } = Astro.props;
---



<div class="path-col" style="color: rgb(145, 82, 168);">
  <span  class="path-line d-none d-lg-flex" style="background: rgb(145, 82, 168);"></span>
  <a  href={href}>
    <div class="hexagon-base">
      <div class="hexagon" style={`background-image: url(${img}); border-color: rgb(145, 82, 168);`}>
        <div class="left-side" style="border-color: rgb(145, 82, 168);"></div>
        <div class="right-side" style="border-color: rgb(145, 82, 168);"></div>
        <p class="subtitle">{title}</p>
      </div>
    </div>
  </a>
</div>

<style>

.hexagon-base:hover .hexagon {
    opacity: 1;
}

.hexagon:hover {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
    background-image: url(https://potenciaqa.vincoorbisdev.com/app/assets/img/eye.png) !important;
}

</style>
